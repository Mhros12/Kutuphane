@model List<RegistrationModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center">
    <div class="d-grid">
        <a asp-action="AddRegister" asp-controller="Registration" class="btn btn-primary mb-3">Kayıt Ekle</a>
    </div>
    <table class="table table-bordered">
        <tr>
            <th>ID</th>
            <th>Ad Soyad</th>
            <th>Kitap Adı</th>
            <th>Düzenle/iade</th>
        </tr>
        @if (Model != null && Model.Any())
        {
            @foreach (var Register in Model)
            {
                <tr>
                    <td>@Register.RegId</td>
                    <td>@Register.NameSurname</td>
                    <td>@Register.BookName</td>
                    <td>
                        <div class="btn-group btn-group-sm">
                            <a asp-controller="Registration" asp-action="RegisterEdit" asp-route-id="@Register.RegId" class="btn btn-primary">Düzenle</a>
                            <a asp-controller="Registration" asp-action="RegisterStatusUpdate" asp-route-id="@Register.RegId" class="btn btn-danger">iade</a>
                        </div>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6">
                    <div>
                        Hiç bir kayıt bulunamadı.
                    </div>
                </td>
            </tr>
        }
    </table>
</div>