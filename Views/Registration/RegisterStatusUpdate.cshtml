@model Registration

<h3>Kitap iade</h3>
<hr />
<form method="post" asp-action="RegisterStatusUpdate" asp-controller="Registration">
    <div class="mb-3">
        <label class="form-label">Id</label>
        <input type="text" class="form-control" asp-for="Id" readonly />
    </div>

    <div class="mb-3">
        <label asp-for="FullName" class="form-label">Ad Soyad</label>
        <input asp-for="FullName" class="form-control" placeholder="Ad Soyad" readonly />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Kitap Id</label>
        <input type="text" class="form-control" asp-for="BookId" readonly />
    </div>

    <div class="mb-3">
        <label asp-for="ReturnedOn" class="form-label">İade Tarihi</label>
        <input asp-for="ReturnedOn" class="form-control" type="date" readonly />
        <span asp-validation-for="ReturnedOn" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CreatedOn" class="form-label">Eklenme Tarihi</label>
        <input asp-for="CreatedOn" class="form-control" type="date" readonly />
        <span asp-validation-for="CreatedOn" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ModifiedOn" class="form-label">Düzenlenme Tarihi</label>
        <input asp-for="ModifiedOn" class="form-control" type="date" readonly />
        <span asp-validation-for="ModifiedOn" class="text-danger"></span>
    </div>

    <div class="d-grid">
        <button type="submit" class="btn btn-danger">iade</button>
    </div>
</form>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}