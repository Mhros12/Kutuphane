@model KitaplikModel

<h3>Kitabı Sil</h3>
<hr />
<form method="post" asp-action="KitapSil" asp-controller="KitapEdit">
    <div class="mb-3">
        <label class="form-label">Id</label>
        <input type="text" class="form-control" asp-for="Id" readonly />
    </div>
    <label>Durumu</label>
    <div class="form-check">
        <input type="radio" asp-for="Durum" value="true" class="form-check-input" readonly />
        <label class="form-check-label">Mevcut</label>
    </div>
    <div class="form-check">
        <input type="radio" asp-for="Durum" value="false" class="form-check-input" readonly />
        <label class="form-check-label">Dışarıda</label>
    </div>
    <hr />
    <div class="mb-3">
        <label asp-for="Kitap" class="form-label">Kitap Adı</label>
        <input asp-for="Kitap" class="form-control" placeholder="Kitap Adı" readonly />
    </div>

    <div class="d-grid">
        <button type="submit" class="btn btn-danger mb-3" onclick="return confirm('silmek istediğinden emin misin? : @Model.Kitap')">Sil</button>
    </div> 
</form>