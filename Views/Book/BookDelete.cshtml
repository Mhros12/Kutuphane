@model BookModel

<h3>Kitabı Sil</h3>
<hr />
<form method="post" asp-action="BookDelete" asp-controller="Book">
    <div class="mb-3">
        <label class="form-label">Id</label>
        <input type="text" class="form-control" asp-for="BookId" readonly />
    </div>
    <label>Durumu</label>
    <div class="form-check">
        <input type="radio" asp-for="Status" value="true" class="form-check-input" readonly />
        <label class="form-check-label">Mevcut</label>
    </div>
    <div class="form-check">
        <input type="radio" asp-for="Status" value="false" class="form-check-input" readonly />
        <label class="form-check-label">Dışarıda</label>
    </div>
    <hr />
    <div class="mb-3">
        <label asp-for="Book" class="form-label">Kitap Adı</label>
        <input asp-for="Book" class="form-control" placeholder="Kitap Adı" readonly />
    </div>

    <div class="d-grid">
        <button type="submit" class="btn btn-danger mb-3">Sil</button>
    </div>
</form>