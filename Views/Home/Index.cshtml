@model List<KitaplikModel>
@{
    ViewData["Title"] = "index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center">
    <div class="d-grid">
        <a asp-action="KitapEkle" asp-controller="Home" class="btn btn-primary mb-3">Kitap Ekle</a>
    </div>
    <table class="table table-bordered">
        <tr>
            <th>ID</th>
            <th>Durum</th>
            <th>Kitap Adı</th>
            <th>Düzenle/sil</th>
        </tr>
        @if (Model != null && Model.Any())
        {
            @foreach (var kitap in Model)
            {
                <tr>
                    <td>@kitap.Id</td>
                    @if (kitap.Durum == true){<td>Mevcut</td>}
                    else{<td>Dışarıda</td>}
                    <td>@kitap.Kitap</td>
                    <td>
                        <div class="btn-group btn-group-sm">
                            <a asp-action="KitapEdit" asp-controller="KitapEdit" asp-route-id="@kitap.Id" class="btn btn-primary mb-3">Kitap Düzenle</a>
                            <a asp-action="KitapSil" asp-controller="KitapEdit" asp-route-id="@kitap.Id" class="btn btn-danger mb-3">Kitap Sil</a>
                        </div>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6">
                    <div>
                        Hiç bir kayıt bulunamadı.
                    </div>
                </td>
            </tr>
        }
    </table>
</div>


